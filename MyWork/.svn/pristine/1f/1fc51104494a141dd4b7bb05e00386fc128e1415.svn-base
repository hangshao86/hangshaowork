<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical" >

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1" >
	<!--设置activity上半部分的图片  -->
        <ImageView
            android:id="@+id/login_iv"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:scaleType="centerCrop"
            android:src="@drawable/test01" />
    </LinearLayout>
	<!--设置activity下半部分的布局  -->
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1"
        android:orientation="vertical" 
       >
        <!--设置输入账号的布局  -->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="10dp"
            android:orientation="horizontal" >

            <TextView
                android:id="@+id/tv_username"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="2"
                android:paddingLeft="40dp"
                android:text="@string/username" />

            <EditText
                android:id="@+id/et_username"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_marginRight="50dp"
                android:background="@drawable/btn_backgroup"
                android:padding="5dp"
                android:layout_weight="5"
                android:hint="@string/hint_username" />
        </LinearLayout>

        <!--设置密码的布局  -->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
             >

            <TextView
                android:id="@+id/tv_pwd"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="2"
                android:paddingLeft="40dp"
                android:text="@string/password" />

            <EditText
                android:id="@+id/et_pwd"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_marginRight="50dp"
                android:background="@drawable/btn_backgroup"
                android:inputType="textPassword"
                android:padding="5dp"
                android:layout_weight="5"
                android:hint="@string/hint_password" />
        </LinearLayout>
        <!--设置两个Button的布局  -->
        <LinearLayout
            	android:layout_width="match_parent"
            	android:layout_height="wrap_content"
            	android:orientation="horizontal"
            	android:layout_marginTop="20dp" >
        <Button android:id="@+id/btn_login"
            	android:layout_width="0dp"
            	android:layout_weight="1"
            	android:layout_height="wrap_content"
            	android:text="@string/btn_login"
            	android:textSize="24sp"
            	android:textColor="#fff"
            	android:background="#0fb4eb"
            	android:layout_marginLeft="40dp"
            	android:layout_marginRight="10dp"
            	android:onClick="OnClick"/>
   		 <Button android:id="@+id/btn_register"
            	android:layout_width="0dp"
            	android:layout_weight="1"
            	android:layout_height="wrap_content"
            	android:text="@string/btn_register"
            	android:textSize="24sp"
            	android:textColor="#fff"
            	android:layout_marginRight="40dp"
            	android:layout_marginLeft="10dp"
            	android:background="#0fb4eb"
            	android:onClick="OnClick"/>
        </LinearLayout>
        <!--设置两个CheckBox的布局  -->
        <LinearLayout 
            	android:layout_width="match_parent"
            	android:layout_height="wrap_content"
            	android:orientation="horizontal"
            	android:layout_marginTop="10dp"
            	>
            <CheckBox 
                android:layout_width="0dp"
                android:id="@+id/savepwd"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:text="@string/checkbox_savepwd"
                android:layout_marginLeft="40dp"
             
                />
            <CheckBox
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:id="@+id/autologin"
                android:layout_weight="1"
                android:text="@string/checkbox_autologin"
                />"
        </LinearLayout>
        <!--设置找回密码的布局  -->
        <RelativeLayout 
            	android:layout_width="match_parent"
            	android:layout_height="wrap_content"
            	android:layout_marginTop="12dp">"
        <TextView 
            	android:layout_width="wrap_content"
            	android:layout_height="wrap_content"
            	android:text="@string/find_pwd"
            	android:id="@+id/getpwd"
            	android:onClick="OnClick"
            	android:textSize="15sp"
            	android:textStyle="italic|bold"
            	android:layout_alignParentRight="true"
            	android:autoLink="none"
            	android:layout_marginRight="10dp"/>
        </RelativeLayout>
    </LinearLayout>

</LinearLayout>