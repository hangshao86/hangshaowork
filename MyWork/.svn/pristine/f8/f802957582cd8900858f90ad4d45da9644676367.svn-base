<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:layout_margin="10dp" >
    <TextView android:id="@+id/tv_billtip"
              android:layout_height="30dp"
              android:layout_width="match_parent"
              android:text="@string/hello_world"
              android:gravity="center"
              
        />
    <LinearLayout android:layout_height="40dp"
                  android:layout_width="match_parent"
                  android:id="@+id/historybill_ll1"
                  android:layout_below="@+id/tv_billtip"
                  android:orientation="horizontal"
                  android:background="#349CFF"
                  android:onClick="OnClick" >
    <TextView android:id="@+id/tv_available"
        	  android:layout_width="0dp"
        	  android:layout_weight="1"
        	  android:layout_height="match_parent"
        	  style="@style/query_textview"
        	  android:text="@string/available_thismonth"
        />
    <TextView android:id="@+id/tv_available_data"
              android:layout_width="0dp"
              android:layout_weight="3"
              android:layout_height="match_parent"
              style="@style/query_textview"
              android:text="@string/hello_world"
        />
    </LinearLayout>
    "
    <ListView  android:id="@+id/querycost_list"
               android:layout_height="wrap_content"
               android:layout_width="match_parent"
               android:layout_below="@+id/historybill_ll1"
               android:visibility="gone"/>
    
     <LinearLayout android:layout_height="40dp"
                  android:layout_width="match_parent"
                  android:id="@+id/historybill_ll2"
                  android:layout_below="@+id/querycost_list"
                  android:orientation="horizontal"
                  android:background="#349CFF"
                  android:layout_marginTop="2dp">
    <TextView android:id="@+id/tv_cost"
        	  android:layout_width="0dp"
        	  android:layout_weight="1"
        	  android:layout_height="match_parent"
        	  style="@style/query_textview"
        	  android:text="@string/cost_thismonth"
        />
    <TextView android:id="@+id/tv_cost_data"
              android:layout_width="0dp"
              android:layout_weight="3"
              android:layout_height="match_parent"
              style="@style/query_textview"
              android:text="@string/hello_world"
              
        />
    </LinearLayout>
    <LinearLayout android:layout_height="40dp"
                  android:layout_width="match_parent"
                  android:id="@+id/historybill_ll3"
                  android:layout_below="@+id/historybill_ll2"
                  android:orientation="horizontal"
                  android:background="#349CFF"
                  android:layout_marginTop="2dp" >
    <TextView android:id="@+id/tv_balance_endmonth"
        	  android:layout_width="0dp"
        	  android:layout_weight="1"
        	  android:layout_height="match_parent"
        	  style="@style/query_textview"
        	  android:text="@string/balance_endmonth"
        />
    <TextView android:id="@+id/tv_balance_endmonth_data"
              android:layout_width="0dp"
              android:layout_weight="3"
              android:layout_height="match_parent"
              style="@style/query_textview"
              android:text="@string/hello_world"
        />
    </LinearLayout>
    
	
</RelativeLayout>
