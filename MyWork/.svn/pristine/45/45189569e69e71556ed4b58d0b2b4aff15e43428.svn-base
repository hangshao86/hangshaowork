				}
				case XmlPullParser.END_TAG:
				{
					
				}
				default:
					
					break;
				}
			   eventType=xmlPullParser.next();
				
			}
			
		} catch (XmlPullParserException e) {
			// TODO Auto-generated catch block
			e.printStackTrace();
		} catch (IOException e) {
			// TODO Auto-generated catch block
			e.printStackTrace();
		}
    	return temp;
