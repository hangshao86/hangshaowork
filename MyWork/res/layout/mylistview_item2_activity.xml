<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent" 
    android:background="#fff">
    <ImageView android:layout_width="60dp"
               android:layout_height="60dp"
               android:id="@+id/iv_shopimage"
               android:src="@drawable/foodshop1"  
               />
    <TextView  android:layout_width="wrap_content"
               android:layout_height="wrap_content"
               android:id="@+id/tv_shopname"
               android:text="@string/shopname"
               android:layout_toRightOf="@+id/iv_shopimage"
               android:layout_marginLeft="10dp"
               android:textSize="18sp"
               android:textStyle="bold"
        />
    <ImageView android:layout_toRightOf="@+id/iv_shopimage"
        	   android:layout_width="100dp"
        	   android:layout_height="20dp"
        	   android:id="@+id/iv_star"
        	   android:layout_below="@+id/tv_shopname"
        	   android:src="@drawable/star"
        	   android:layout_marginLeft="5dp" 
        />
    <TextView  android:layout_width="wrap_content"
        	   android:layout_height="wrap_content"
        	   android:id="@+id/tv_sales_volume_permonth"
        	   android:text="@string/sales_volume_permonth"
        	   android:layout_toRightOf="@+id/iv_star"
        	   android:layout_alignBottom="@+id/iv_star"
        	   android:layout_marginLeft="10dp"
        	   android:textSize="13sp"
        	   
        	     />
    <TextView  android:layout_width="wrap_content"
        	   android:layout_height="wrap_content"
        	   android:id="@+id/tv_begin_end"
        	   android:layout_below="@+id/iv_star"
        	   android:layout_alignBottom="@+id/iv_shopimage"
        	   android:layout_toRightOf="@+id/iv_shopimage"
        	   android:layout_marginLeft="10dp"
        	   android:text="@string/begin_end"
        	   android:textSize="13sp"
        	   android:gravity="bottom"
        />
    <TextView  android:layout_width="wrap_content"
        	   android:layout_height="wrap_content"
        	   android:id="@+id/tv_discounttext1"
        	   android:text="@string/discounttext1"
        	   android:textColor="#fff"
        	   android:textSize="18sp"
        	   android:background="#F93817"
        	   android:layout_toRightOf="@+id/iv_shopimage"
        	   android:layout_below="@+id/tv_begin_end"
        	   android:layout_marginLeft="10sp"
        	   android:layout_marginTop="10sp"
        />
    <TextView  android:layout_width="wrap_content"
        	   android:layout_height="wrap_content"
        	   android:id="@+id/tv_discount1"
        	   android:text="@string/discount1"
        	   android:layout_toRightOf="@+id/tv_discounttext1" 
        	   android:layout_below="@+id/tv_begin_end"
        	   android:layout_alignBottom="@+id/tv_discounttext1"
        	   android:layout_marginLeft="10dp"
        	   android:layout_marginTop="10sp"
        	   android:gravity="center"
        	    android:textSize="13sp"
        	   android:textColor="#BDBDBD"
        />
    <TextView  android:layout_width="wrap_content"
        	   android:layout_height="wrap_content"
        	   android:id="@+id/tv_discounttext2"
        	   android:text="@string/discounttext2"
        	   android:textColor="#fff"
        	   android:textSize="18sp"
        	   android:background="#FBEF0C"
        	   android:layout_toRightOf="@+id/iv_shopimage"
        	   android:layout_below="@+id/tv_discounttext1"
        	   android:layout_marginLeft="10dp"
        	   android:layout_marginTop="5dp"
        />
    <TextView  android:layout_width="wrap_content"
        	   android:layout_height="wrap_content"
        	   android:id="@+id/tv_discount2"
        	   android:text="@string/discount2"
        	   android:layout_toRightOf="@+id/tv_discounttext2" 
        	   android:layout_below="@+id/tv_discounttext1"
        	   android:layout_alignBottom="@+id/tv_discounttext2"
        	   android:layout_marginLeft="10dp"
        	   android:layout_marginTop="5dp"
        	   android:gravity="center"
        	    android:textSize="13sp"
        	   android:textColor="#BDBDBD"
        />
</RelativeLayout>
